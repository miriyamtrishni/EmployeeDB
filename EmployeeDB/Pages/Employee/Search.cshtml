@page
@model EmployeeSearchModel
@{
    ViewData["Title"] = "Employee Search";
}

<h2 class="text-center my-4">Employee Search</h2>

<div class="container">
    <form method="get" class="row g-3 mb-4">
        <!-- Branch Name -->
        <div class="col-md-4">
            <label for="BranchName" class="form-label">Branch Name:</label>
            <select id="BranchName" name="BranchName" class="form-select">
                <option value="">All Branches</option>
                @foreach (var branch in Model.Branches)
                {
                    <option value="@branch.BRANCH_NAME">@branch.BRANCH_NAME</option>
                }
            </select>
        </div>

        <!-- Status -->
        <div class="col-md-4">
            <label for="Status" class="form-label">Status:</label>
            <select id="Status" name="Status" class="form-select">
                <option value="">All</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>

        <!-- Age -->
        <div class="col-md-4">
            <label for="Age" class="form-label">Age Over:</label>
            <input type="number" id="Age" name="Age" class="form-control" placeholder="Enter age" />
        </div>

        <!-- Search Button -->
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary px-4">Search</button>
        </div>
    </form>

    <!-- Employee Table -->
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Branch Name</th>
                <th scope="col">Employee No</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Employees.Any())
            {
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.BranchName</td>
                        <td>@employee.EmployeeNo</td>
                        <td>@employee.Name</td>
                        <td>@employee.Age</td>
                        <td>@employee.Status</td>
                        <td>
                            <!-- Update Button -->
                            <a asp-page="/UpdateEmployee" asp-route-id="@employee.EmployeeNo" class="btn btn-warning btn-sm">Update</a>
                            <!-- Delete Button -->
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="id" value="@employee.EmployeeNo" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No employees found</td>
                </tr>
            }
        </tbody>
    </table>
</div>